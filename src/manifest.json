{
  "manifest_version": 2,
  "name": "LNbits Extension",
  "author": "motorina0",
  "description": "LNbits browser extension",
  "homepage_url": "https://lnbits.link",
  "version": "0.0.1",
  "icons": {
    "48": "img/icon.png",
    "96": "img/icon@2x.png"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "LNbits",
    "default_popup": "app.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' ; object-src 'self'",
  "applications": {
    "gecko": {
      "id": "lnbits-browser-extension"
    }
  },
  "sidebar_action": {
    "default_icon": {
      "48": "img/icon.png",
      "96": "img/icon@2x.png"
    },
    "default_title": "LNbits",
    "default_panel": "app.html"
  }
}