{
  "name": "lnbits-extension",
  "version": "0.0.1",
  "description": "LNbits browser extension",
  "scripts": {
    "dev": "mix",
    "watch": "mix watch",
    "production": "mix --production",
    "build": "npm run production && rm -rf dist-zip && npm run zip",
    "zip": "node scripts/build-zip.js",
    "format": "prettier --write 'src/assets/**/*.{css,js,vue}'",
    "pre-commit": "lint-staged"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "jquery": "^3.6.0",
    "laravel-mix": "^6.0.11",
    "quasar": "^1.13.2",
    "vue": "^2.6.12",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "archiver": "^5.3.0",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.15",
    "prettier": "2.2.1",
    "resolve-url-loader": "^3.1.3",
    "sass": "^1.32.13",
    "sass-loader": "^11.1.1"
  },
  "lint-staged": {
    "*.{css,js,vue}": [
      "prettier --write"
    ]
  }
}
